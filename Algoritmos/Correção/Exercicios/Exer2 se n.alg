// Seção de Declarações 
var
num, p, i: inteiro

inicio
// Seção de Comandos
Escreval ("informe um numero")
leia (num)

Se (num % 2 = 0) entao
   p <- num
   Senao
   I <- num
   Fimse
   
   Escreval ("p= ", p)
   Escreval ("i= ", i)
   

fimalgoritmo
